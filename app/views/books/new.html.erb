<h1>Books</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<% @books.each do |book| %>

 <p>Title</p>
  <span>
    <%= link_to book.title, book_path(book.id) %>
  </span>

<% end %>

<h1>New book</h1>

<%= form_with model: @book, url: '/books', method: true do |f| %>

 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %>

 <%= f.submit 'create' %>

 <% end %>